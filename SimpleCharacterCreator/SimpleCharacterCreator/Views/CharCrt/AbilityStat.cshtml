@{
    ViewBag.Title = "AbilityStat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section featured {
<section class="featured">
    <div class="content-wrapper">
        <div class="TextBlock">
            <hgroup class="title">
                <h1>@ViewBag.Title.<br /></h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
            <p>
